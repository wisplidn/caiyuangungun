{
  "path_management": {
    "name": "unified_path_manager",
    "version": "1.0",
    "description": "统一路径管理配置 - 支持Raw层读取和Norm层三阶段处理",
    "enabled": true,
    
    "raw_layer": {
      "name": "raw_data_reader",
      "base_path": "/Users/daishun/个人文档/caiyuangungun/data/raw",
      "description": "Raw层数据读取路径配置",
      "paths": {
        "landing_subpath": "landing",
        "archive_subpath": "archive"
      },
      "archive_types": {
        "SNAPSHOT": {
          "value": "snapshot",
          "description": "快照数据归档",
          "path_pattern": "{source_name}/{data_type}",
          "enabled": true
        },
        "DAILY": {
          "value": "daily",
          "description": "交易日数据归档",
          "path_pattern": "{source_name}/{data_type}/{year_month}/{day}",
          "enabled": true
        },
        "MONTHLY": {
          "value": "monthly",
          "description": "月度数据归档",
          "path_pattern": "{source_name}/{data_type}/{year_month}",
          "enabled": true
        }
      },
      "file_config": {
        "filename_template": "data.{file_type}",
        "supported_formats": ["parquet", "json"],
        "default_format": "parquet"
      }
    },
    
    "norm_layer": {
      "name": "norm_data_processor",
      "base_path": "/Users/daishun/个人文档/caiyuangungun/data/norm",
      "description": "Norm层三阶段数据处理路径配置",
      "processing_stages": {
        "stage_1_merge": {
          "name": "数据合并标准化阶段",
          "description": "合并成1个或多个完成标准化的压缩parquet，方便读取",
          "path_patterns": {
            "SNAPSHOT": "{source_name}/{data_interface}/stage1_merged",
            "MONTHLY": "{source_name}/{data_interface}/stage1_merged",
            "DAILY": "{source_name}/{data_interface}/stage1_merged/{year}"
          },
          "file_config": {
            "filename_template": "data.parquet",
            "compression": "snappy"
          },
          "enabled": true
        },
        "stage_2_clean": {
          "name": "专用清洗阶段",
          "description": "用专用清洗器清洗过第一轮的压缩parquet，解决重复等问题",
          "path_patterns": {
            "SNAPSHOT": "{source_name}/{data_interface}/stage2_cleaned",
            "MONTHLY": "{source_name}/{data_interface}/stage2_cleaned",
            "DAILY": "{source_name}/{data_interface}/stage2_cleaned/{year}"
          },
          "file_config": {
            "filename_template": "data.parquet",
            "compression": "snappy"
          },
          "enabled": true
        },
        "stage_3_reconcile": {
          "name": "跨数据源核对阶段",
          "description": "解决跨数据源核对的问题，比如当天有收盘价但是没有总市值，需要联合多数据源协同处理",
          "path_patterns": {
            "SNAPSHOT": "{source_name}/{data_interface}/stage3_reconciled",
            "MONTHLY": "{source_name}/{data_interface}/stage3_reconciled",
            "DAILY": "{source_name}/{data_interface}/stage3_reconciled/{year}"
          },
          "file_config": {
            "filename_template": "data.parquet",
            "compression": "snappy"
          },
          "enabled": true
        }
      }
    }
  }
}